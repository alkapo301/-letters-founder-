<h2>تعداد حروف عبارت خود را بشمارید</h2>
<input type="text" id="textInput" placeholder="عبارت خود را وارد کنید">
<button id="countBtn">محاسبه تعداد حروف</button>

<div id="result"></div>

<script>
    document.getElementById('countBtn').addEventListener('click', function() {
        var text = document.getElementById('textInput').value;
        var letterCount = text.length;
        document.getElementById('result').textContent = 'تعداد حروف عبارت شما: ' + letterCount;
    });
</script>

